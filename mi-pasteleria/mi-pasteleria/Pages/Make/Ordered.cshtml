@page
@model OrderedModel
@{
    ViewBag.Title = "Procesando Orden";
}

<div class="grid place-items-center">
    <div class="mt-10 sm:mt-0">
        <div class="px-4 sm:px-0">
            <h3 class="text-center text-lg font-medium leading-6 text-gray-900">Procesando orden y pago</h3>
            <p class="text-center mt-1 text-sm text-gray-600">Espere unos momentos.</p>
        </div>
        <div class="shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                <div>
                    <div id="progress-bar">
                        <div id="progress"></div>
                    </div>
                </div>
            </div>
            <div id="end">
                <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                    <legend class="text-center text-base font-medium text-gray-900">Orden Procesada</legend>
                    <legend class="text-center text-sm text-gray-500">Gracias por su preferencia</legend>
                </div>
                <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                    <a asp-page="/Index" type="button" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Volver a Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/progressBarAnimation.js"></script>